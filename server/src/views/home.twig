{% extends 'base.twig' %}
{% block main %}
<div class="row">
    <div class="col-md-12">
        {% for mod in mods %}
        <div class="media">
            <a class="pull-left" href="#">
                <img class="media-object" data-src="holder.js/64x64" alt="64x64" src="data:image/svg+xml;base64," style="width: 64px; height: 64px;">
            </a>
            <div class="media-body">
                <h4 class="media-heading"><a href="{{ relative('index.php/mod/' ~ mod.modId) }}">{{ mod.name }}</a>{% if mod.authors|length > 0 %} <small>by {{ mod.authors|join(', ') }}</small>{% endif %}</h4>
            {{ mod.description }}
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}